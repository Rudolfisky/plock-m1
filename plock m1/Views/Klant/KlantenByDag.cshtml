@model IEnumerable<BLL.Klant>

@{
    ViewData["Title"] = "KlantenByDag";
}

<h1> @ViewBag.DagNaam@ViewBag.DagDate </h1>

<p>
    <a asp-action="CreateKlantToDag">Create New</a> |
    @Html.ActionLink("Add Existing", "AddKlantToDagList", new { ID = ViewBag.dagID }) ViewBag.dagID
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelNR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HuisNR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aankomst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vertrek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
                @Html.DisplayFor(modelItem => item.Tussenvoegsel)
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @*@if (item.TelNR != null)
            {
                Html.Display("ja");
            }
            else
            {
                Html.Display("nee");
            }*@
                @Html.DisplayFor(modelItem => item.TelNR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HuisNR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB.Day)-@Html.DisplayFor(modelItem => item.DOB.Month)-@Html.DisplayFor(modelItem => item.DOB.Year)
            </td>

            <td>
                @if (item.Aankomst != new DateTime(0001, 1, 1, 00, 00, 00))
                {
                    @Html.DisplayFor(modelItem => item.Aankomst.TimeOfDay)
                }
            </td>
            <td>
                @if (item.Vertrek != new DateTime(0001, 1, 1, 00, 00, 00))
                {
                    @Html.DisplayFor(modelItem => item.Vertrek.TimeOfDay)
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "KlantDagUpdate", new { id = item.ID, DagID = ViewBag.DagID }) |
                @Html.ActionLink("Remove From Day", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
