@model IEnumerable<BLL.Klant>

@{
    ViewData["Title"] = "KlantList";
}

<style>
    #dagenLink {
        color: grey;
    }

        #dagenLink:hover {
            transition-duration: .3s;
            transition-delay: .1s;
            background-color: rgba(0,0,0,.05);
            color: black;
        }

    .listItem:hover {
        transition-duration: .3s;
        background-color: lightblue !important;
        color: black;
    }
</style>
<div class="d-flex">
    <div id="dagenLink" class="p-2 flex-grow-1"><h1>Dagen</h1></div>
    <div id="klantenLink" class="p-2 flex-grow-1"><a asp-action="KlantList"><h1>Klanten</h1></a></div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tussenvoegsel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelNR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HuisNR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tussenvoegsel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Achternaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelNR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HuisNR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
